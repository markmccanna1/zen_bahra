<div class='sign_up'>
  <%= form_for @user, url: { action: 'create'} do |f| %>
    <p id='name'>Name <%= f.text_field :name %></p>
    <p id='email'>Email <%= f.text_field :email %></p>
    <p id='password'>Password <%= f.password_field :password %></p>
    <p id='password_confirmation'>Confirm Password <%= f.password_field :password_confirmation %></p>
    <%= f.submit "Create", :id => 'create_user' %>
  <% end %>
</div>  
